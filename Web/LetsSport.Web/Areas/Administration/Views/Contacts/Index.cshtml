@model LetsSport.Web.ViewModels.Admin.Contacts.IndexViewModel
@{
    ViewData["Title"] = "Messages";
}

<h2 class="display-4">@this.ViewData["Title"]</h2>
<hr>

<partial name="_ConfirmationMessagePartial" />

<table class="table">
    <thead>
        <tr>
            <th>Sender</th>
            <th>Title</th>
            <th>Created On</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var message in Model.Messages)
        {
            <tr>
                <td>@message.Name</td>
                <td>@message.Title</td>
                <td>@message.CreatedOn.ToString(GlobalConstants.DefaultDateFormat)</td>
                <td>
                    <a class="btn-sm btn-warning" asp-action="Details" asp-route-id="@message.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="paging"
                   asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PageCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="paging"
                   asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>
