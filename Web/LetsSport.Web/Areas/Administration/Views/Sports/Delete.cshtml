@model LetsSport.Web.ViewModels.Admin.Sports.DeleteViewModel
@using LetsSport.Common

@{
    ViewData["Title"] = "Delete Sport";
}

<h2 class="display-4">Delete Sport: @Model.Name</h2>
<hr />

<h4>Are you sure you want to delete this?</h4>
<br />

<div>
    <dl class="row">
        <dt class="col-sm-2">Name: </dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Image: </dt>
        <dd class="col-sm-10"><img class="rounded-sm" style="width:320px;" src="@Model.Image" alt="@Model.Name)" /></dd>
        <dt class="col-sm-2">Created On: </dt>
        <dd class="col-sm-10"><time datetime="@Model.CreatedOn.ToString("O")">@Model.CreatedOn.ToString(GlobalConstants.DefaultDateFormat)</time></dd>
        <dt class="col-sm-2">Modified On:</dt>
        @if (Model.ModifiedOn.HasValue)
        {
            <dd class="col-sm-10">
                <time datetime="@Model.ModifiedOn.Value.ToString("O")">@Model.ModifiedOn.Value.ToString(GlobalConstants.DefaultDateFormat)</time>
            </dd>
        }
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn-sm btn-danger mr-2" />
        <input type="submit" value="Back to List" class="btn-sm btn-primary" asp-action="Index" />
    </form>
</div>
