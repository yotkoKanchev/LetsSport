@model LetsSport.Web.ViewModels.Admin.Sports.IndexListViewModel
@using LetsSport.Common

@{
    ViewData["Title"] = "Sports";
}

<h2 class="display-4">Sports</h2>
<hr />

<div class="mb-3">
    <a class="btn-sm btn-primary" asp-action="Create">Create New</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Image</th>
            <th>Created On</th>
            <th>Modified On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.Sports)
        {
        <tr>
            <td>@item.Name</td>
            <td><img src="@item.Image" class="rounded-sm" alt="@item.Name" style="width:160px;" /></td>
            <td>@item.CreatedOn.ToString(GlobalConstants.DefaultDateFormat)</td>
            @if (item.ModifiedOn.HasValue)
            {
                <td>@item.ModifiedOn?.ToString(GlobalConstants.DefaultDateFormat)</td>
            }
            else
            {
                <td></td>
            }
            <td>
                <a class="btn-sm btn-warning mr-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination justify-content-center">
        @if (this.Model.CurrentPage == 1)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Previous</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="paging"
                   asp-route-countryId="@this.Model.CountryId"
                   asp-route-page="@(this.Model.CurrentPage - 1)">Previous</a>
            </li>
        }

        @if (this.Model.CurrentPage == this.Model.PagesCount)
        {
            <li class="page-item disabled">
                <a class="page-link" href="#">Next</a>
            </li>
        }
        else
        {
            <li class="page-item">
                <a class="page-link"
                   asp-route="paging"
                   asp-route-countryId="@this.Model.CountryId"
                   asp-route-page="@(this.Model.CurrentPage + 1)">Next</a>
            </li>
        }
    </ul>
</nav>

