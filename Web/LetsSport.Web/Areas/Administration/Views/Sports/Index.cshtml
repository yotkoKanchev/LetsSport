@model IEnumerable<LetsSport.Data.Models.Sport>

@{
    ViewData["Title"] = "Sports";
}

<h2>Sports</h2>
<hr />
<p>
    <a class="btn-sm btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedOn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedOn)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Name
                </td>
                <td>
                    <img src="@item.Image" class="w-50 h-auto rounded-sm" alt="@item.Name" />
                </td>
                <td>
                    @item.CreatedOn
                </td>
                <td>
                    @item.ModifiedOn
                </td>
                <td>
                    <a class="btn-sm btn-warning mr-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
