@model LetsSport.Web.ViewModels.Admin.Arenas.DeleteViewModel

@{
    ViewData["Title"] = "Delete Arena";
}

<h2 class="display-4">Delete Arena: @Model.Name</h2>
<hr />

<h3>Are you sure you want to delete this?</h3>
<br />

<div>
    <dl class="row">
        <dt class="col-sm-2">Name: </dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Country: </dt>
        <dd class="col-sm-10">@Model.CountryName</dd>
        <dt class="col-sm-2">City: </dt>
        <dd class="col-sm-10">@Model.CityName</dd>
        <dt class="col-sm-2">Sport: </dt>
        <dd class="col-sm-10">@Model.SportName</dd>
        <dt class="col-sm-2">Web-Url: </dt>
        <dd class="col-sm-10">@Model.WebUrl</dd>
        <dt class="col-sm-2">Email: </dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Address: </dt>
        <dd class="col-sm-10">@Model.Address</dd>
        <dt class="col-sm-2">Created On: </dt>
        <dd class="col-sm-10">@Model.CreatedOn</dd>
        <dt class="col-sm-2">Is Deleted: </dt>
        <dd class="col-sm-10">@Model.IsDeleted</dd>
    </dl>

    <form asp-action="Delete">
        <a class="btn-sm btn-danger mr-2"  asp-action="Delete" asp-route-id="@Model.Id">Delete</a>
        <a class="btn-sm btn-primary" asp-action="Index" asp-route-countryId="@Model.CountryId">Back to List</a>
    </form>
</div>
