@model LetsSport.Web.ViewModels.Admin.Arenas.ChooseCountryInputModel

@{
    ViewData["Title"] = "Choose Country";
}

<h2 class="display-4">@this.ViewData["Title"]</h2>
<hr />

<form asp-action="Country" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="CountryId" class="control-label"></label>
                <select name="CountryId" class="form-control" asp-items="@Model.Countries">
                    <option value="@Model.CountryId"></option>
                </select>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Choose" class="btn-sm btn-success mr-2" formmethod="post" />
                <input type="submit" value="Back to List" class="btn-sm btn-primary" asp-action="Index" />
            </div>
        </div>
    </div>
</form> 
