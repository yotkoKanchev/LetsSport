@model LetsSport.Web.ViewModels.Admin.Arenas.FilterBarViewModel
@using LetsSport.Web.ViewModels.Admin.Enums

<div style="border-radius:0.3rem; overflow:hidden;">

    <form class="filter-bar" style="align-items:baseline" asp-controller="Home" asp-action="Filter">
        <div>
            <span class="mr-2">
                <select id="country" asp-for="@Model.Country" class="filter-events" asp-items="@Model.Countries" onchange=clickSend()>
                    <option value="">country</option>
                </select>
            </span>
            <span class="mr-2">
                <select asp-for="@Model.City" class="filter-events" asp-items="@Model.Cities">
                    <option value="">city</option>
                </select>
            </span>
            <span class="mr-2">
                <select asp-for="@Model.Sport" class="filter-events" asp-items="@Model.Sports">
                    <option value="">sport</option>
                </select>
            </span>
            <span class="mr-2">
                <select asp-for="@Model.IsDeleted" asp-items="Html.GetEnumSelectList<ModelDeletableStatus>()" class="filter-events">
                </select>
            </span>
        </div>
        <div>
            <span>
                <input id="send-btn" class="filter-events" formmethod="get" type="submit" asp-action="Filter" asp-route-country="@Model.Country" value="Filter" />
            </span>
            <span>
                <a class="filter-events" asp-action="Index">Clear</a>
            </span>
        </div>
    </form>
</div>


<script>
    function clickSend() {
        document.getElementById("send-btn").click();
    };
</script>