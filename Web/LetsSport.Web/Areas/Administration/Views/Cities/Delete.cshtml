@model LetsSport.Web.ViewModels.Admin.Cities.DeleteViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2 class="display-4">Delete City: @Model.Name</h2>
<hr />

<h3>Are you sure you want to delete this?</h3>
<br />

<div>
    <dl class="row">
        <dt class="col-sm-2">Name: </dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Country: </dt>
        <dd class="col-sm-10">@Model.CountryName</dd>
        <dt class="col-sm-2">Created On: </dt>
        <dd class="col-sm-10">@Model.CreatedOn</dd>
        <dt class="col-sm-2">Is Deleted: </dt>
        <dd class="col-sm-10">@Model.IsDeleted</dd>
    </dl>

    <form asp-controller="Cities">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CountryId" />
        <input type="submit" asp-action="Archive" value="Archive" class="btn-sm btn-warning mr-2" />
        <input type="submit" asp-action="Delete" value="Delete" class="btn-sm btn-danger mr-2" />
        <input type="submit" asp-action="Index" value="Back to List" class="btn-sm btn-primary"  />
    </form>
</div>
