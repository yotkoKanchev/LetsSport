@model LetsSport.Web.ViewModels.Admin.FilterBarViewModel
@using LetsSport.Web.ViewModels.Admin.Enums

<div style="border-radius:0.3rem; overflow:hidden;">

    <form class="filter-bar" style="align-items:baseline" asp-controller="Home" asp-action="Filter">
        <input type="hidden" asp-for="CountryId" />
        <div>
            <span class="mr-2">
                <select asp-for="@Model.City" class="filter-events" asp-items="@Model.Cities">
                    <option value="">city</option>
                </select>
            </span>
            <span class="mr-2">
                <select asp-for="@Model.Sport" class="filter-events" asp-items="@Model.Sports">
                    <option value="">sport</option>
                </select>
            </span>
            <span class="mr-2">
                <select asp-for="@Model.IsDeleted" asp-items="Html.GetEnumSelectList<ModelDeletableStatus>()" class="filter-events">
                </select>
            </span>
        </div>
        <div>
            <span>
                <input id="send-btn" class="filter-events" formmethod="get" type="submit" asp-action="Filter" value="Filter" />
            </span>
            <span>
                <input id="send-btn" class="filter-events" type="submit" asp-action="Index" value="Clear" />
            </span>
        </div>
    </form>
</div>
