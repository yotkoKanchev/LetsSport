@model LetsSport.Web.ViewModels.Admin.FilterBarViewModel

<div class="rounded overflow-hidden">

    <form class="filter-bar align-items-baseline" asp-controller="Home" asp-action="Filter">
        <input type="hidden" asp-for="CountryId" />
        <div>
            <span class="mr-2">
                <select asp-for="@Model.CityId" class="filter-events" asp-items="@Model.Cities">
                    <option value="">city</option>
                </select>
            </span>
            <span class="mr-2">
                <select asp-for="@Model.SportId" class="filter-events" asp-items="@Model.Sports">
                    <option value="">sport</option>
                </select>
            </span>
        </div>
        <div>
            <span>
                <input id="send-btn" class="filter-events" formmethod="get" type="submit" asp-action="Filter" value="Filter" />
            </span>
            <span>
                <input id="send-btn" class="filter-events" type="submit" asp-action="Index" value="Clear" />
            </span>
        </div>
    </form>
</div>
