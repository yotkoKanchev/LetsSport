@model LetsSport.Web.ViewModels.Admin.ChooseCountryInputModel

@{
    ViewData["Title"] = "Choose Country";
}

<h2 class="display-4">@this.ViewData["Title"]</h2>
<hr />

<form asp-action="Index" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="CountryId" class="control-label"></label>
                <select name="CountryId" class="form-control" asp-items="@Model.Countries">
                    <option value="@Model.CountryId"></option>
                </select>
            </div>
           
            <div class="form-group">
                <button type="submit" class="btn-sm btn-success">Choose</button>
            </div>
        </div>
    </div>
</form> 
