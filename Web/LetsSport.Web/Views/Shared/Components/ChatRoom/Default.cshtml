@model LetsSport.Web.ViewModels.Events.ChatRoomViewModel

<div class="card col-md-6 chat-card p-0 info-card">
    <div class="chat-card-header msg_head mt-0">
        <div class="d-flex bd-highlight">
            <div class="img_cont">
                <img src="@Model.SportImage" asp-append-version="true" class="rounded-circle user_img" alt="@Model.Sport">
            </div>
            <div class="user_info">
                <span class="h5">Chat Room</span>
            </div>
        </div>
    </div>
    <div id="messagesList" class="card-body msg_card_body">
        <input id="user-id" type="hidden" asp-for="@Model.UserId" value="@Model.UserId" />
        @foreach (var message in @Model.ChatRoomMessages)
        {
            if (message.SenderId == Model.UserId)
            {
                <div class="d-flex justify-content-start mb-3">
                    <div class="img_cont_msg">
                        <img src="@message.SenderAvatarUrl" asp-append-version="true" class="rounded-circle user_img_msg" alt="@message.SenderUserName Avatar">
                        <div class="img_cont_msg">@message.SenderUserName</div>
                    </div>
                    <div class="msg_cotainer">
                        @message.Content
                        <span class="msg_time d-block">
                            <time>@message.CreatedOn</time>
                        </span>
                    </div>
                </div>
            }
            else
            {
                <div class="d-flex justify-content-end mb-3">
                    <div class="msg_cotainer_send">
                        @message.Content
                        <span class="msg_time d-block">
                            <time>@message.CreatedOn</time>
                        </span>
                    </div>
                    <div class="img_cont_msg">
                        <img src="@message.SenderAvatarUrl" asp-append-version="true" class="rounded-circle user_img_msg" alt="@message.SenderUserName Avatar">
                        <div class="img_cont_msg">@message.SenderUserName</div>
                    </div>
                </div>
            }
        }
    </div>
    <div class="input-group-append">
        <input class="form-control type_msg" type="text" id="messageInput" placeholder="Typing as @User.Identity.Name..." />
        <button id="sendButton" class="input-group-text send_btn">Send</button>
    </div>
</div>


