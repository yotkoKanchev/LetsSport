@model LetsSport.Data.Models.EventModels.Event
@{
    ViewData["Title"] = "Create";
    var arenas = (IList<string>)this.ViewData["arenas"];
}

<h1>Crate Event</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="View">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SportType" class="control-label">Choose Sport</label>
                <select asp-for="SportType" asp-items="Html.GetEnumSelectList<LetsSport.Data.Models.EventModels.SportType>()" class="form-control">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="SportType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Arena" class="control-label"></label>
                <select name="Arena" class="form-control">
                    <option value="">Please Select</option>
                    @foreach (var arena in arenas)
                    {
                        <option value="@arena">@arena</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input type="date" asp-for="Date" class="form-control"/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartingHour" class="control-label">Start time</label>
                <input type="time" asp-for="StartingHour" class="form-control"/>
                <span asp-validation-for="StartingHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DurationInHours" class="control-label">Duration in hours</label>
                <input asp-for="DurationInHours" class="form-control" />
                <span asp-validation-for="DurationInHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameFormat" class="control-label">Game Format</label>
                <input asp-for="GameFormat" class="form-control" placeholder="4by4, 11/11 etc...." />
                <span asp-validation-for="GameFormat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinPlayers" class="control-label">Minimum number of players</label>
                <input asp-for="MinPlayers" class="form-control" />
                <span asp-validation-for="MinPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxPlayers" class="control-label">Maximum number of players</label>
                <input asp-for="MaxPlayers" class="form-control" />
                <span asp-validation-for="MaxPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<LetsSport.Data.Models.UserModels.Gender>()" class="form-control">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalInfo" class="control-label">Additional Information</label>
                <textarea rows="5" asp-for="AdditionalInfo" class="form-control" placeholder="The Loosing team pay the rent :)"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<LetsSport.Data.Models.EventModels.EventStatus>()" class="form-control">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestStatus" class="control-label">Request Status</label>
                <select asp-for="RequestStatus" asp-items="Html.GetEnumSelectList<LetsSport.Data.Models.ArenaModels.ArenaRentalRequestStatus>()" class="form-control">
                    <option value="">Please Select</option>
                </select>
                <span asp-validation-for="RequestStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" asp-controller="Events" asp-action="Create" formmethod="post" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
