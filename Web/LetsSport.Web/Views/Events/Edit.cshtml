@model LetsSport.Web.ViewModels.Events.EventEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit "@Model.Name" Event</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sport" class="control-label"></label>
                <select asp-for="Sport" class="form-control">
                    <option value="">@Model.Sport</option>
                </select>
                <span asp-validation-for="Sport" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Arena" class="control-label"></label>
                <select asp-for="Arena" class="form-control">
                    <option value="">@Model.Arena</option>
                    @foreach (var arena in @Model.Arenas)
                    {
                        <option value="@arena">@arena</option>
                    }
                </select>
                <span asp-validation-for="Arena" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Current Date: "<strong>@Model.Date"</strong></p>
                <label asp-for="Date" class="control-label">New Date</label>
                <input type="date" asp-for="Date" class="form-control"/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <p>Current Starting Hour: "<strong>@Model.StartingHour"</strong></p>
                <label asp-for="StartingHour" class="control-label"> New Start time</label>
                <input type="time" asp-for="StartingHour" class="form-control" />
                <span asp-validation-for="StartingHour" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<LetsSport.Data.Models.UserModels.Gender>()" class="form-control">
                    <option value="">@Model.Gender</option>
                </select>
                <span asp-validation-for="Gender" class="text -danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameFormat" class="control-label"></label>
                <input asp-for="GameFormat" class="form-control" />
                <span asp-validation-for="GameFormat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DurationInHours" class="control-label"></label>
                <input asp-for="DurationInHours" class="form-control" />
                <span asp-validation-for="DurationInHours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MinPlayers" class="control-label"></label>
                <input asp-for="MinPlayers" class="form-control" />
                <span asp-validation-for="MinPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaxPlayers" class="control-label"></label>
                <input asp-for="MaxPlayers" class="form-control" />
                <span asp-validation-for="MaxPlayers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdditionalInfo" class="control-label"></label>
                <textarea rows="5" asp-for="AdditionalInfo" class="form-control"></textarea>
                <span asp-validation-for="AdditionalInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<LetsSport.Data.Models.EventModels.EventStatus>()" class="form-control">
                    <option value="">@Model.Status</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequestStatus" class="control-label">Request Status</label>
                <select asp-for="RequestStatus" asp-items="Html.GetEnumSelectList<LetsSport.Data.Models.ArenaModels.ArenaRentalRequestStatus>()" class="form-control">
                    <option value="">@Model.RequestStatus</option>
                </select>
                <span asp-validation-for="RequestStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" asp-controller="events" asp-action="edit" type="submit" value="Update" formmethod="post" />
                <a class="btn btn-warning" asp-controller="events" asp-action="details" asp-route-id="@Model.Id">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
