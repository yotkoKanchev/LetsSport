@model LetsSport.Web.ViewModels.Arenas.ArenaImagesEditViewModel
@{
    ViewData["Title"] = "Edit Arena Images";
}

<h2 class="text-center">@this.ViewData["Title"]</h2>

<hr>

<form class="row m-5" asp-controller="Arenas" enctype="multipart/form-data">
    <div class="col-5">
        <div class="col-sm-12">
            <input type="file" asp-for="Images" class="form-control custom-file-input" multiple>
            <label class="custom-file-label">Choose Files...</label>
        </div>
    </div>
    <div class="col-sm">
        <input id="changeBtn" type="submit" asp-action="AddImages" asp-route-id="@Model.Id" class="btn btn-warning" value="Add More Pictures" />
    </div>
</form>
<form class="row" asp-controller="Arenas" enctype="multipart/form-data">

    <div class="container">
        @foreach (var img in Model.Images)
        {
            <div class="checkbox m-2">
                <label><input type="checkbox" value="@img.Id"><img class="ml-3" name="image" src="@img.Url" asp-append-version="true" /></label>
                <input id="changeBtn" type="submit" asp-action="DeleteImage" asp-route-id="@img.Id" class="btn btn-warning ml-3" value="Delete" />
            </div>
        }
    </div>
    <div class="flex justify-content-center">
        <input id="changeBtn" type="submit" asp-action="DeleteImages" asp-route-id="@Model.Id" class="btn btn-warning " value="Delete All Selected" />
    </div>
</form>

@section Scripts {

    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        })
    </script>
}
